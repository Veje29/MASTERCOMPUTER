<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProcessorRecyclerViewFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Intel Core i9 Socket LGA 1700 "
            android:background="@color/black"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:padding="8dp"
            android:gravity="center"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_intel_i9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:itemCount="2"
            tools:listitem="@layout/processor_row" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Intel Core i7 Socket LGA 1700 "
            android:background="@color/black"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:padding="8dp"
            android:gravity="center"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_intel_i7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:listitem="@layout/processor_row"
            tools:itemCount="2"/>

    </LinearLayout>
</FrameLayout>